<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/incoming_call"
    android:paddingLeft="16dp"
    android:paddingRight="10dp"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/fullScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#FFFFFFFF" />

                <TextView
                    android:id="@+id/name"
                    android:text="Unknown"
                    android:textSize="22dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FFFFFFFF" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:text="Incoming call"
                        android:textSize="16dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#88FFFFFF" />

                    <TextView
                        android:id="@+id/waitTime"
                        android:textSize="16dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#88FFFFFF" />

                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            
            <LinearLayout
                android:id="@+id/hangup"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:gravity="center"
            >

                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:background="@drawable/hangup_circle">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/hangup_icon"
                    />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/answer"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:gravity="center"
            >
            
                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:background="@drawable/answer_circle">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/answer_icon"
                    />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
