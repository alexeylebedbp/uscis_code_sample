<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@android:color/black</item>

        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item> <!-- 10+ -->
    </style>

    <style name="IncomingCallTheme" parent="AppTheme">

    </style>

    <style name="AppTheme.LaunchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@layout/launch_screen</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item> <!-- 8+ -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item> <!-- 8.1+ -->

        <item name="android:windowSplashScreenAnimatedIcon">@drawable/launch_icon</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>
